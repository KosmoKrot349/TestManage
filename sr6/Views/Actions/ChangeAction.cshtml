@model sr6.Models.Action

@{
    ViewBag.Title = "Изменение действия";
}

<h2>Изменить действие</h2>

@using (Html.BeginForm("ChangeAction","Actions",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Действие</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.number, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" name="number" value="@Model.number" />
            @Html.ValidationMessageFor(model => model.number, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.action, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" name="action" value="@Model.action" />
            @Html.ValidationMessageFor(model => model.action, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="hidden" name="Scenarioid" value="@Model.Scenarioid" />
    <input type="hidden" name="Aid" value="@Model.id" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <a href="/Actions/ActionList/?id=@Model.Scenarioid">Назад</a>
</div>
